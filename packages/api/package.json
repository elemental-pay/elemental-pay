{
  "name": "@elemental-pay/api",
  "version": "0.0.1",
  "description": "",
  "exports": "./lib/server.js",
  "main": "./lib/server.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf lib/",
    "start": "node --es-module-specifier-resolution=node lib/server.js",
    "build:types": "tsc -d -p tsconfig.json",
    "build:sql": "cp -r src/data/pg/sql/** lib/data/pg/sql",
    "build:dkim": "cp -r src/dkim/** lib/dkim",
    "build:js": "tsc -p tsconfig.json",
    "build": "run-s clean build:js build:types build:sql build:dkim",
    "dev": "NODE_ENV=development nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "dev:start": "npm-run-all clean build start",
    "start:local": "docker compose -f docker-compose.yml -f docker-compose.local.yml up --build",
    "start:staging": "docker compose -f docker-compose.yml -f docker-compose.staging.yml up",
    "start:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/merge": "^8.3.6",
    "@graphql-tools/schema": "^9.0.4",
    "argon2": "^0.29.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.2",
    "elemental-orm": "0.0.5-beta.2",
    "express-graphql": "^0.12.0",
    "express-oauth-server": "^2.0.0",
    "graphql": "^16.6.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.18.0",
    "helmet": "^6.0.0",
    "ioredis": "^5.2.3",
    "joi": "^17.6.3",
    "loglevel": "^1.8.0",
    "nanoid": "^4.0.0",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.8.0",
    "pg-promise": "^10.12.0",
    "rate-limiter-flexible": "^2.3.11",
    "redis-om": "^0.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-graphql": "^0.9.0",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/nodemailer": "^6.4.6",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "tape": "^5.6.1",
    "typescript": "^4.8.3"
  }
}
